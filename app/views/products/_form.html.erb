<%= form_for(product) do |f| %>
<% if product.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>

<%= f.label :date_of_purchase, "TESTING A GEM" %>
<%= f.enhanced_date_select :date_of_purchase, { :prompt => {
  :day => translate("global.select.day"),
  :month => translate("global.select.month"),
  :year => translate("global.select.year") },
  :value => {:year => 2016, :month => 4, :day=> 1},
  :order => [:day, :month, :year],
  :start_year => Time.now.year,
  :end_year => 1930 }, { :class => "input_3cols" } %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
